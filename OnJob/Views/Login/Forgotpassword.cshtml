@model OnJobEntity.JobSeeker.User
@{
    ViewBag.Title = "Forgotpassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@TempData["Message"] != null)
{
<script type="text/javascript">

     var x = '@TempData["Message"]';
    $(document).ready(function () {


        if ('@TempData["Message"]' == "5")
        {
            toastr.success("Mail Send Successfull !!");
        } else if('@TempData["Message"]' == "2") {
            toastr.error("All Field Required !!");
        } else if ('@TempData["Message"]' == "3") {
            toastr.error("User Not Found!!");
        }
        else {

            toastr.success(x);
        }
    });


</script>


}

<div class="container-login100">
    <div class="wrap-login100">
        <span class="login100-form-title pb-4">
            Forgot Password?
        </span>
        <p>Enter your email and we will send you instructions on how to reset your password</p>

        @using (Html.BeginForm("Forgotpassword", "Login"))
        {
            @Html.AntiForgeryToken()


            <div class="wrap-input100  mb-3">
               

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input100", placeholder = "Email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                <span class="focus-input100"></span>
                <span class="symbol-input100">
                    <span class="lnr lnr-envelope"></span>
                </span>
            </div>
            <div class="container-login100-form-btn pt-2">
                <input type="submit" class="login100-form-btn" name="submit" value="Recover Password">
            </div>
        }
        <div class="text-center w-full pt-4">
            <span class="txt1">
                You Remember Password?
            </span>
            <a class="txt1 bo1 hov1" href="/Home/Login">
                LogIn
            </a>
        </div>
    </div>
</div>